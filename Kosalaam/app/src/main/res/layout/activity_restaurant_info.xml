<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:background="@color/black"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintDimensionRatio="H,36:31"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>

            <View
                android:id="@+id/view1_restaurantInfo"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintDimensionRatio="H,180:144.2"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>

            <androidx.constraintlayout.widget.ConstraintLayout

                android:background="@drawable/bottomsheet_back"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view1_restaurantInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    app:layout_constraintDimensionRatio="H,180:16.2"
                    android:id="@+id/view2_restarantInfo"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>

                <TextView
                    android:id="@+id/tv_restaurantInfo_name"
                    android:fontFamily="@font/montserrat_bold"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view2_restarantInfo"
                    android:textSize="20sp"
                    android:textColor="#191919"
                    android:text="Dokia"
                    app:layout_constraintWidth_percent="0.861"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <View
                    app:layout_constraintDimensionRatio="H,180:3.8"
                    android:id="@+id/view3_restarantInfo"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_restaurantInfo_name"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>

                <TextView
                    android:id="@+id/tv_restaurantInfo_type"
                    android:textColor="#191919"
                    android:textSize="12sp"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Halal Middle Eastern"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view3_restarantInfo"
                    app:layout_constraintWidth_percent="0.861"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <View
                    app:layout_constraintDimensionRatio="H,180:3.8"
                    android:id="@+id/view4_restarantInfo"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_restaurantInfo_type"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_restaurantInfo_address"
                    app:layout_constraintTop_toBottomOf="@id/view4_restarantInfo"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintWidth_percent="0.861"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        app:layout_constraintBottom_toBottomOf="@id/tv_restaurantInfo_address"
                        android:id="@+id/iv_restaurantInfo_marker"
                        app:layout_constraintWidth_percent="0.0161"
                        android:src="@drawable/marker"
                        app:layout_constraintTop_toTopOf="@id/tv_restaurantInfo_address"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginLeft="4.4dp"
                        android:text="Usado_ro 18-gil, Yongsan-gu"
                        app:layout_constraintLeft_toRightOf="@id/iv_restaurantInfo_marker"
                        android:id="@+id/tv_restaurantInfo_address"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
                <View
                    android:id="@+id/view5_restaurantInfo"
                    app:layout_constraintDimensionRatio="H,180:7.5"
                    app:layout_constraintTop_toBottomOf="@id/cl_restaurantInfo_address"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
                <View
                    android:id="@+id/view6_restaurantInfo"
                    android:background="#f1f1f5"
                    app:layout_constraintDimensionRatio="H,180:2"
                    app:layout_constraintTop_toBottomOf="@id/view5_restaurantInfo"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
                <View
                    android:id="@+id/view7_restaurantInfo"
                    app:layout_constraintDimensionRatio="H,180:8.8"
                    app:layout_constraintTop_toBottomOf="@id/view6_restaurantInfo"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
                <TextView
                    android:id="@+id/tv_restarantInfo_affinity"
                    app:layout_constraintWidth_percent="0.861"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="16sp"
                    android:textColor="#191919"
                    android:text="@string/restaurantInfo_affinity"
                    app:layout_constraintTop_toBottomOf="@id/view7_restaurantInfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <View
                    android:id="@+id/view8_restaurantInfo"
                    app:layout_constraintDimensionRatio="H,180:5"
                    app:layout_constraintTop_toBottomOf="@id/tv_restarantInfo_affinity"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_restaurantInfo_affinity"
                    app:layout_constraintWidth_percent="0.861"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view8_restaurantInfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_restaurantInfo_certify"
                        android:fontFamily="@font/montserrat_medium"
                        android:textColor="#191919"
                        android:textSize="12sp"
                        android:text="Self-Certified"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_marginLeft="5dp"
                        app:layout_constraintLeft_toRightOf="@id/tv_restaurantInfo_certify"
                        app:layout_constraintTop_toTopOf="@id/tv_restaurantInfo_certify"
                        app:layout_constraintBottom_toBottomOf="@id/tv_restaurantInfo_certify"
                        android:src="@drawable/search_certified"
                        app:layout_constraintWidth_percent="0.0322"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:id="@+id/view9_restaurantInfo"
                    app:layout_constraintDimensionRatio="H,180:8.8"
                    app:layout_constraintTop_toBottomOf="@id/cl_restaurantInfo_affinity"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
                <View
                    android:id="@+id/view10_restaurantInfo"
                    android:background="#f1f1f5"
                    app:layout_constraintDimensionRatio="H,180:2"
                    app:layout_constraintTop_toBottomOf="@id/view9_restaurantInfo"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
                <View
                    android:id="@+id/view11_restaurantInfo"
                    app:layout_constraintDimensionRatio="H,180:8.8"
                    app:layout_constraintTop_toBottomOf="@id/view10_restaurantInfo"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_restaurantInfo_contact"
                    app:layout_constraintWidth_percent="0.861"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view11_restaurantInfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_restaurantInfo_contact"
                        android:layout_width="8dp"
                        android:layout_height="11dp"
                        android:src="@drawable/search_phone"
                        app:layout_constraintBottom_toBottomOf="@id/tv_restaurantInfo_contact"
                        app:layout_constraintDimensionRatio="H,1:1"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tv_restaurantInfo_contact"
                        app:layout_constraintWidth_percent="0.029" />

                    <TextView
                        android:includeFontPadding="false"
                        android:layout_marginLeft="4.4dp"
                        android:id="@+id/tv_restaurantInfo_contact"
                        android:fontFamily="@font/montserrat_bold"
                        android:textSize="14sp"
                        android:text="@string/restaurantInfo_contact"
                        android:textColor="#191919"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/iv_restaurantInfo_contact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        app:layout_constraintRight_toRightOf="parent"
                        android:includeFontPadding="false"
                        app:layout_constraintTop_toTopOf="@id/tv_restaurantInfo_contact"
                        android:fontFamily="@font/montserrat_medium"
                        android:textColor="#999999"
                        android:textSize="12sp"
                        android:id="@+id/tv_restaurantInfo_phoneNum"
                        android:text="010-1234-1234"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:id="@+id/view12_restaurantInfo"
                    app:layout_constraintDimensionRatio="H,180:6.5"
                    app:layout_constraintTop_toBottomOf="@id/cl_restaurantInfo_contact"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
                <View
                    android:id="@+id/view13_restaurantInfo"
                    android:background="#f1f1f5"
                    app:layout_constraintDimensionRatio="H,180:0.4"
                    app:layout_constraintTop_toBottomOf="@id/view12_restaurantInfo"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
                <View
                    android:id="@+id/view14_restaurantInfo"
                    app:layout_constraintDimensionRatio="H,180:6.2"
                    app:layout_constraintTop_toBottomOf="@id/view13_restaurantInfo"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_restaurantInfo_openTime"
                    app:layout_constraintWidth_percent="0.861"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view14_restaurantInfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_restaurantInfo_openTime"
                        android:layout_width="8dp"
                        android:layout_height="11dp"
                        android:src="@drawable/ionic_md_time"
                        app:layout_constraintBottom_toBottomOf="@id/tv_restaurantInfo_openTime"
                        app:layout_constraintDimensionRatio="H,1:1"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tv_restaurantInfo_openTime"
                        app:layout_constraintWidth_percent="0.0322" />

                    <TextView
                        android:includeFontPadding="false"
                        android:layout_marginLeft="4.4dp"
                        android:id="@+id/tv_restaurantInfo_openTime"
                        android:fontFamily="@font/montserrat_bold"
                        android:textSize="14sp"
                        android:text="@string/restaurantInfo_openTime"
                        android:textColor="#191919"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/iv_restaurantInfo_openTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        app:layout_constraintRight_toRightOf="parent"
                        android:includeFontPadding="false"
                        app:layout_constraintTop_toTopOf="@id/tv_restaurantInfo_openTime"
                        android:fontFamily="@font/montserrat_medium"
                        android:textColor="#999999"
                        android:textSize="12sp"
                        android:id="@+id/tv_restaurantInfo_openTime_insert"
                        android:text="11AM ~ 9PM"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                </androidx.constraintlayout.widget.ConstraintLayout>
                <View
                    android:id="@+id/view15_restaurantInfo"
                    app:layout_constraintDimensionRatio="H,180:6.5"
                    app:layout_constraintTop_toBottomOf="@id/cl_restaurantInfo_openTime"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
                <View
                    android:id="@+id/view16_restaurantInfo"
                    android:background="#f1f1f5"
                    app:layout_constraintDimensionRatio="H,180:0.4"
                    app:layout_constraintTop_toBottomOf="@id/view15_restaurantInfo"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
                <View
                    android:id="@+id/view17_restaurantInfo"
                    app:layout_constraintDimensionRatio="H,180:6.2"
                    app:layout_constraintTop_toBottomOf="@id/view16_restaurantInfo"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_restaurantInfo_parkAble"
                    app:layout_constraintWidth_percent="0.861"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view17_restaurantInfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_restaurantInfo_parkAble"
                        android:layout_width="8dp"
                        android:layout_height="11dp"
                        android:src="@drawable/awesome_parking"
                        app:layout_constraintBottom_toBottomOf="@id/tv_restaurantInfo_parkAble"
                        app:layout_constraintDimensionRatio="H,1:1"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tv_restaurantInfo_parkAble"
                        app:layout_constraintWidth_percent="0.0322" />

                    <TextView
                        android:includeFontPadding="false"
                        android:layout_marginLeft="4.4dp"
                        android:id="@+id/tv_restaurantInfo_parkAble"
                        android:fontFamily="@font/montserrat_bold"
                        android:textSize="14sp"
                        android:text="@string/restaurantInfo_parkable"
                        android:textColor="#191919"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/iv_restaurantInfo_parkAble"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        app:layout_constraintRight_toRightOf="parent"
                        android:includeFontPadding="false"
                        app:layout_constraintTop_toTopOf="@id/tv_restaurantInfo_parkAble"
                        android:fontFamily="@font/montserrat_medium"
                        android:textColor="#999999"
                        android:textSize="12sp"
                        android:id="@+id/tv_restaurantInfo_parkAble_insert"
                        android:text="Availalbe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                </androidx.constraintlayout.widget.ConstraintLayout>
                <View
                    android:id="@+id/view18_restaurantInfo"
                    app:layout_constraintDimensionRatio="H,180:10.5"
                    app:layout_constraintTop_toBottomOf="@id/cl_restaurantInfo_parkAble"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>

                <View
                    android:id="@+id/view19_restaurantInfo"
                    android:background="#f1f1f5"
                    app:layout_constraintDimensionRatio="H,180:2"
                    app:layout_constraintTop_toBottomOf="@id/view18_restaurantInfo"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
                <View
                    android:id="@+id/view20_restaurantInfo"
                    app:layout_constraintDimensionRatio="H,180:8.8"
                    app:layout_constraintTop_toBottomOf="@id/view19_restaurantInfo"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
                <TextView
                    android:id="@+id/tv_restaurantInfo_gallery"
                    app:layout_constraintWidth_percent="0.861"
                    app:layout_constraintTop_toBottomOf="@id/view20_restaurantInfo"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="16sp"
                    android:text="@string/restaurantInfo_gallery"
                    android:textColor="#191919"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <View
                    android:id="@+id/view21_restaurantInfo"
                    app:layout_constraintDimensionRatio="H,180:5"
                    app:layout_constraintTop_toBottomOf="@id/tv_restaurantInfo_gallery"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_gallery"
                    android:orientation="horizontal"
                    app:layout_constraintDimensionRatio="H,155:60"
                    app:layout_constraintWidth_percent="0.861"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view21_restaurantInfo"
                    android:layout_width="0dp"
                    android:layout_height="0dp"/>

                <View
                    android:id="@+id/view22_restaurantInfo"
                    app:layout_constraintDimensionRatio="H,180:8.8"
                    app:layout_constraintTop_toBottomOf="@id/rv_gallery"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>

                <View
                    android:id="@+id/view23_restaurantInfo"
                    android:background="#f1f1f5"
                    app:layout_constraintDimensionRatio="H,180:2"
                    app:layout_constraintTop_toBottomOf="@id/view22_restaurantInfo"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>

                <View
                    android:id="@+id/view24_restaurantInfo"
                    app:layout_constraintDimensionRatio="H,180:6.2"
                    app:layout_constraintTop_toBottomOf="@id/view23_restaurantInfo"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
                <TextView
                    android:id="@+id/tv_restaurantInfo_map"
                    app:layout_constraintWidth_percent="0.861"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="#191919"
                    android:textSize="16sp"
                    android:text="@string/restaurantInfo_map"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view24_restaurantInfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <View
                    android:id="@+id/view25_restaurantInfo"
                    app:layout_constraintDimensionRatio="H,180:2.5"
                    app:layout_constraintTop_toBottomOf="@id/tv_restaurantInfo_map"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
                <TextView
                    android:id="@+id/tv_restaurantInfo_address2"
                    android:fontFamily="@font/montserrat_medium"
                    app:layout_constraintWidth_percent="0.861"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view25_restaurantInfo"
                    android:text="65, Usado-ro 18-gil, Yongsan-gu"
                    android:textSize="12sp"
                    android:textColor="#999999"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <View
                    android:id="@+id/view26_restaurantInfo"
                    app:layout_constraintDimensionRatio="H,180:2.5"
                    app:layout_constraintTop_toBottomOf="@id/tv_restaurantInfo_address2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</ScrollView>
